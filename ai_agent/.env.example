# WordPress Configuration
WP_URL=http://your-wordpress-site.com
WP_USERNAME=your_username
WP_PASSWORD=your_password
WP_POST_STATUS=draft

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///blog_automation.db
DB_USER=postgres
DB_PASSWORD=postgres

# API Keys
REUTERS_API_KEY=your_reuters_api_key
NEWSAPI_KEY=your_newsapi_key

# News Monitoring Settings
NEWS_CHECK_INTERVAL=300
TRENDING_WINDOW_HOURS=24
MAX_ARTICLES=10
MAX_TRENDING_TOPICS=5

# Blog Generation Settings
BLOG_MIN_WORDS=500
BLOG_MAX_WORDS=2000
BLOG_DEFAULT_LANGUAGE=en

# Model Settings
MODEL_NAME=facebook/opt-1.3b
MODEL_CACHE_DIR=model_cache

# Logging
LOG_LEVEL=INFO

# Scraper Settings
SCRAPER_RETRY_COUNT=3
SCRAPER_RETRY_DELAY=2
SCRAPER_TIMEOUT=30

# Runtime Configuration
RUNTIME_MODE=worker  # or 'web' for API server